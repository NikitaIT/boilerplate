{
  "name": "root",
  "private": true,
  "scripts": {
    "my-app": "cd ./packages/my-app && yarn start",
    "lib": "cd ./packages/lib && yarn start",
    "build-production": "lerna run build --stream",
    "build-development": "lerna run build.dev --stream",
    "lint:style": "stylelint \"packages/**/*.{css,scss}\"",
    "lint:ts": "eslint \"packages/**/*.{tsx,ts}\"",
    "test": "jest",
    "prestart": "yarn build",
    "start": "run-p start:*",
    "start:storybook": "lerna run storybook --stream --scope=@mylib/storybook",
    "start:watch": "tsc --build --watch",
    "pretest": "yarn build",
    "test:storybook": "lerna run test --stream --scope=@mylib/storybook",
    "build": "tsc --build",
    "build:storybook": "lerna run build --stream --scope=@mylib/storybook",
    "clean": "rimraf packages/*/{tsconfig.tsbuildinfo,lib,dist}"
  },
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "chalk": "latest",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "ts-jest": "^25.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "3.7.5",
    "rimraf": "^2.6.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "gitHooks": {
    "commit-msg": "node scripts/verifyCommitMsg.js"
  },
  "lint-staged": {
    "packages/**/*.{tsx,js,ts}": "eslint --cache --fix",
    "packages/**/*.css": "stylelint --fix"
  },
  "dependencies": {
    "@mylib/framework": "*"
  }
}
