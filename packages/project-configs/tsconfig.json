{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./",
    "baseUrl": "./",
    //    "paths": {
    //      "@my/*": ["packages/*/src"]
    //    },
    // https://github.com/RyanCavanaugh/learn-a/#tsconfigsettingsjson
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["packages"],
  "files": [],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "__tests__",
    "**/*.test*",
    "**/*.spec*"
  ]
}
